package com.adiro.nasm_ide;

import javafx.scene.layout.HBox;
import javafx.scene.layout.VBox;
import javafx.scene.text.Text;

public class RegistersView extends VBox{
	
	private int ax = 0;
	private int bx = 0;
	private int cx = 0;
	private int dx = 0;

	public RegistersView() {
		super();
		var ax = new HBox(new Text("AX: "), new Text(Integer.toString(this.ax)));
		var bx = new HBox(new Text("BX: "), new Text(Integer.toString(this.bx)));
		var cx = new HBox(new Text("CX: "), new Text(Integer.toString(this.cx)));
		var dx = new HBox(new Text("DX: "), new Text(Integer.toString(this.dx)));
		
		this.getChildren().add(ax);
		this.getChildren().add(bx);
		this.getChildren().add(cx);
		this.getChildren().add(dx);
	}
}
