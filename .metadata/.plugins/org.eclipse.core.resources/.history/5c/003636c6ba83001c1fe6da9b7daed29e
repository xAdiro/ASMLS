package com.adiro.nasm_ide.gui.custom_blocks;

import javafx.scene.layout.HBox;
import javafx.scene.text.Font;
import javafx.scene.text.FontPosture;
import javafx.scene.text.Text;

public class DoubleText extends HBox{
	Text value;
	public DoubleText(String label, String value) {
		super();
		getChildren().add(new Text(label));
		((Text) getChildren().get(0)).setFont(Font.font("Arial", FontPosture.REGULAR, 20));
		
		this.value = new Text(value);
		this.value.setFont(Font.font("Arial", FontPosture.REGULAR, 20));
		getChildren().add(this.value);
		
	}
	public void setValue(int newValue) {
		value.setText(Integer.toString(newValue));
	}
}
