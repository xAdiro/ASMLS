package com.adiro.nasm_ide;

import java.io.File;

import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.scene.control.Button;
import javafx.stage.DirectoryChooser;
import javafx.stage.FileChooser;
import javafx.stage.Stage;

public class SourceButton extends Button{
	public SourceButton(LogReader reader, Stage stage) {
		super("Zmień lokalizacje pliku źródłowego");
		this.setOnAction(new EventHandler<ActionEvent> () {
			@Override public void handle(ActionEvent e) {
				changeFile(reader, stage);
			}
		});
	
	}
	

	private void changeFile(LogReader reader, Stage stage) {
		
		FileChooser fileChooser = new FileChooser();
		fileChooser.setTitle("Open Resource File");
		
		File defaultDir = new File("./");
		fileChooser.setInitialDirectory(defaultDir);
		
		File selectedDir = fileChooser.showOpenDialog(stage);
		
		var dirPath = selectedDir.getAbsolutePath();
		System.out.println(dirPath);
		
		reader.setFile(dirPath);
		
		
	}

}
