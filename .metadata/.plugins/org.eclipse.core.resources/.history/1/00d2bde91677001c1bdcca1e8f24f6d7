package com.adiro.nasm_ide;

import java.util.regex.Pattern;

import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.scene.control.Button;

public class MoveNextButton extends Button{
	public MoveNextButton(SourceViewArea sourceArea) {
		super("NastÄ™pny krok");
		this.setOnAction(new EventHandler<ActionEvent> () {
			@Override public void handle(ActionEvent e) {
				moveNext(sourceArea);
			}
		});
	
	}
	

	private void moveNext(SourceViewArea sourceArea) {
		var pattern = Pattern.compile("{1,9}([a-z]|[A-Z]):");
		var line = sourceArea.code.get(sourceArea.getCurrentLine()).getText().trim();
		var matches = pattern.matcher(line).matches();
		
		if(matches) {
			System.out.print("etykieta");
		}
		else {
			sourceArea.incCurrentLine();
		}
		
	}

}
