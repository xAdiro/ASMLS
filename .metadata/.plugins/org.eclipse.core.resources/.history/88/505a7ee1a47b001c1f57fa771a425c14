package com.adiro.nasm_ide.gui.button;

import java.io.File;

import com.adiro.nasm_ide.gui.content.ContentView;
import com.adiro.nasm_ide.logic.LogReader;

import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.scene.control.Button;
import javafx.stage.DirectoryChooser;
import javafx.stage.Stage;

public class ChangeFile extends Button{
	public ChangeFile(ContentView contentView, Stage stage) {
		super("Zmień lokalizacje plików");
		this.setOnAction(new EventHandler<ActionEvent> () {
			@Override public void handle(ActionEvent e) {
				changeDir(contentView, stage);
			}
		});
	
	}
	

	private void changeDir(ContentView contentView, Stage stage) {
		
		DirectoryChooser dirChooser = new DirectoryChooser();
		dirChooser.setTitle("Open Resource File");
		
		File defaultDir = new File("./");
		dirChooser.setInitialDirectory(defaultDir);
		
		File selectedDir = dirChooser.showDialog(stage);
		
		contentView.setDirectory(selectedDir.getAbsolutePath()+ "/");
			
	}
	
	

}
