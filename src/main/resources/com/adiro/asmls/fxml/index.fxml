<VBox fx:controller="com.adiro.asmls.FxmlController"
      xmlns:fx="http://javafx.com/fxml"
      fx:id="mainBox">
<!--          stylesheets="/com/adiro/asmls/fxml/style.css">-->

    <fx:define>
        <ContentView fx:id="contentView"/>
        <Stage fx:id="stage"/>
    </fx:define>

    <MenuBar maxHeight="100">
        <Menu text="File">
            <FileSubMenu contentView="$contentView" stage="$stage"/>
        </Menu>
        <Menu text="Edit"/>
        <Menu text="Settings"/>
    </MenuBar>
    <HBox>
        <MoveToStartButton fx:id="moveToStartButton" contentView="$contentView"/>
        <MoveManyBackButton fx:id="moveManyBackButton" contentView="$contentView"/>
        <MoveBackButton fx:id="moveBackButton" contentView="$contentView"/>
        <MoveNextButton fx:id="moveNextButton" contentView="$contentView"/>
        <MoveManyNextButton fx:id="moveManyNextButton" contentView="$contentView"/>
        <MoveToEndButton fx:id="moveToEndButton" contentView="$contentView"/>
        <RefreshButton fx:id="refreshButton" contentView="$contentView"/>
    </HBox>
    <fx:reference source="contentView"/>



</VBox>
